        "OwnedBy": "[parameters('OwnedBy')]",
        "Project": "[parameters('Project')]",
        "Environment": "[parameters('Environment')]"
      },
      "scale": null,
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "features": {
          "searchVersion": 1
